{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GrabMe",
  "version": "0.1.0",
  "identifier": "com.grabme.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GrabMe",
        "width": 1320,
        "height": 860,
        "minWidth": 920,
        "minHeight": 620,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "shadow": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
